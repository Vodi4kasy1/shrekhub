local UI = {}

function UI.createButton(text, parent)
    local button = Instance.new("TextButton")
    button.Text = text
    button.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    button.Size = UDim2.new(0, 200, 0, 50)
    button.Parent = parent
end

function UI.createTextBox(placeholderText, parent)
    local textBox = Instance.new("TextBox")
    textBox.PlaceholderText = placeholderText
    textBox.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    textBox.Size = UDim2.new(0, 200, 0, 50)
    textBox.Parent = parent
end

function UI.createCloseGuiButton(parent)
    local closeButton = Instance.new("ImageButton")
    closeButton.Size = UDim2.new(0, 50, 0, 50)
    closeButton.Position = UDim2.new(0, 10, 0.5, 0)
    closeButton.AnchorPoint = Vector2.new(0, 0.5)
    closeButton.Parent = parent
end

function UI.createToggle(parent)
    local toggle = Instance.new("TextButton")
    toggle.Text = "Toggle"
    toggle.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    toggle.Size = UDim2.new(0, 100, 0, 50)
    toggle.Parent = parent
end

function UI.createSlider(minValue, maxValue, defaultValue, parent)
    local slider = Instance.new("TextButton")
    slider.Text = "Slider"
    slider.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    slider.Size = UDim2.new(0, 200, 0, 50)
    slider.Parent = parent
end

function UI.createDropdown(options, parent)
    local dropdown = Instance.new("TextButton")
    dropdown.Text = "Dropdown"
    dropdown.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    dropdown.Size = UDim2.new(0, 150, 0, 50)
    dropdown.Parent = parent
end

function UI.createImageButton(image, parent)
    local imageButton = Instance.new("ImageButton")
    imageButton.Image = image
    imageButton.Size = UDim2.new(0, 50, 0, 50)
    imageButton.Position = UDim2.new(0, 10, 0.5, 0)
    imageButton.AnchorPoint = Vector2.new(0, 0.5)
    imageButton.Parent = parent
end

function UI.createTab(tabName, parent)
    local tab = Instance.new("TextButton")
    tab.Text = tabName
    tab.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    tab.Size = UDim2.new(0, 100, 0, 50)
    tab.Parent = parent
end

function UI.createWindow(title, parent)
    local window = Instance.new("Frame")
    window.Size = UDim2.new(0, 300, 0, 200)
    window.Position = UDim2.new(0.5, -150, 0.5, -100)
    window.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    window.Parent = parent
end

function UI.createNotification(message, parent)
    local notification = Instance.new("TextLabel")
    notification.Text = message
    notification.Size = UDim2.new(0, 200, 0, 50)
    notification.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    notification.Parent = parent
end

return UI
